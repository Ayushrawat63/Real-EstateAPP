generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  email String  @unique
  password String
  avatar String?
  createdAt  DateTime @default(now())
  post Post[] 
}

model Post{
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  title String  @unique
  price Int
  images String[]
  address String
  city String
  bedroom  Int
  bathroom Int
  latitude String
  longitude String
  type Type
  property Property
  createdAt  DateTime @default(now())
  user User @relation(fields: [userId],references: [id])
  userId String @db.ObjectId
  postDetail PostDetails?
}

enum Type {
  Buy
  Rent
}

enum Property {
   Apartment
   House
   Condo
   Land
}

model PostDetails{
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  desc String
  utilities String?
  pet String?
  income Int?
  size Int?
  school Int?
  bus Int?
  restaurant Int?
  post Post @relation(fields: [postId],references: [id])
  postId String @db.ObjectId @unique
  }